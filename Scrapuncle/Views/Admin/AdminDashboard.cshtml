@model Scrapuncle.Models.AdminDashboard
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4 mt-4">
    <!-- header -->
    <h2 class="fw-bold text-dark">Admin Dashboard</h2>
    <p class="text-muted">Welcome to the Admin Panel. Here you can manage users, dealers, scrap pickups, and more.</p>

    <!-- stats cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h6 class="text-muted">Total Users</h6>
                    <h3 class="fw-bold">@Model.TotalUsers</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h6 class="text-muted">Total Dealers</h6>
                    <h3 class="fw-bold">@Model.TotalDealers</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h6 class="text-muted">Total Pickups Scheduled</h6>
                    <h3 class="fw-bold">@Model.TotalPickups</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- quick links -->
    <div class="row g-3 mb-4">
        <div class="col-md-6">
            <a href="/Admin/ViewUsers" class="btn btn-success w-100 py-3 shadow-sm">
                <i class="fas fa-users me-2"></i> Manage Users
            </a>
        </div>
        <div class="col-md-6">
            <a href="/Admin/ViewDealers" class="btn btn-success w-100 py-3 shadow-sm">
                <i class="fas fa-store me-2"></i> Manage Dealers
            </a>
        </div>
    </div>

    <!-- pending pickups -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white border-bottom">
            <h5 class="mb-0 fw-semibold">Pending Pickups</h5>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Pickup ID</th>
                        <th>Date & Time</th>
                        <th>Customer</th>
                        <th>Address</th>
                        <th>Weight(kg)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pickup in Model.PendingPickups)
                    {
                        <tr>
                            <td>#@pickup.Id</td>
                            <td>@pickup.PickupDate.ToString("dd MMM, hh:mm tt")</td>
                            <td>@pickup.User?.FullName</td>
                            <td>@pickup.Pincode</td>
                            <td>@pickup.EstimatedWeight</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>