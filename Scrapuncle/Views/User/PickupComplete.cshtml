@{
    Layout = "_Layout";
    ViewData["Title"] = "Pickup Complete";
}

<div class="d-flex bg-light">
    <div class="container">

        <div class="row align-items-center">
        
            <!-- left side -->
            <div class="col-md-6 text-center">
                <img src="~/images/scheduled.png" alt="Confirmation Image" class="img-fluid">
            </div>

            <!-- right side -->
            <div class="col-md-6">
                <h1 class="fw-bold text-secondary">Yay! Your pick up has been scheduled</h1>
                <a asp-controller="User" asp-action="CheckPickups" class="d-block text-success fw-bold text-decoration-none">VIEW PICKUPS</a>
                <a asp-controller="User" asp-action="SchedulePickup" class="d-block text-success fw-bold text-decoration-none">SCHEDULE ANOTHER PICKUP</a>
            </div>

        </div>

    </div>
</div>
