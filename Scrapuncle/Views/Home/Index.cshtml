@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to Scrapuncle</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="d-flex justify-content-center align-items-center vh-100">

    <div class="container text-center">
        <h1 class="display-4 fw-bold">Welcome to Scrapuncle</h1>

        <p class="mt-3">
            Scrapuncle is an easy-to-use platform that connects users with scrap dealers for efficient scrap pickup.
            Schedule pickups, check rates, and manage your transactions seamlessly.
        </p>

        <a href="~/Identity/Account/Login" class="btn btn-success btn-lg mt-3">Get Started</a>
    </div>


    <div class="container">
        <div class="row p-1">
            <div class="col-2">User</div>
            <div class="col-5"><input type="text" id="userInput" /></div>
        </div>
        <div class="row p-1">
            <div class="col-2">Message</div>
            <div class="col-5"><input type="text" class="w-100" id="messageInput" /></div>
        </div>
        <div class="row p-1">
            <div class="col-6 text-end">
                <input type="button" id="sendButton" value="Send Message" />
            </div>
        </div>
        <div class="row p-1">
            <div class="col-6">
                <hr />
            </div>
        </div>
        <div class="row p-1">
            <div class="col-6">
                <ul id="messagesList"></ul>
            </div>
        </div>
    </div>

    <script src="~/js/signalr/signalr.js"></script>
    <script src="~/js/chat.js"></script>

</body>
</html>
