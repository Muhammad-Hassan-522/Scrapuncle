<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Scrapuncle</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SU.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="User" asp-action="UserDashboard">
                    <img src="~/images/logo.png" alt="Logo" width="120">
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-success" asp-area="" asp-controller="User" asp-action="UserDashboard">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-success" asp-area="" asp-controller="User" asp-action="ScrapRates">Scrap Rates</a>
                            @* <a asp-controller="ScrapRates" asp-action="Index">Scrap Rates</a> *@
                        </li>
                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-success text-white py-4">
        <div class="container-fluid px-0">
            <div class="row mx-0">
                <!-- Contact -->
                <div class="col-md-4 px-4">

                    <h5 class="fw-bold">Contact Us</h5>
                    <p><i class="bi bi-telephone"></i> +91 8595358613</p>
                    <p><i class="bi bi-envelope"></i> team@scrapuncle.com</p>
                    <p class="fw-bold">Customer Support available <br> from 10am - 7pm</p>

                    <h6>Find Us Here</h6>
                    <a href="https://www.instagram.com" class="text-white me-2"><i class="bi bi-instagram"></i></a>
                    <a href="https://www.x.com" class="text-white me-2"><i class="bi bi-twitter"></i></a>
                    <a href="https://www.linkedin.com" class="text-white me-2"><i class="bi bi-linkedin"></i></a>
                    <a href="https://www.facebook.com" class="text-white me-2"><i class="bi bi-facebook"></i></a>
                </div>

                <!-- Quick Links -->
                <div class="col-md-4 px-4">

                    <h5 class="fw-bold">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a asp-controller="User" asp-action="UserDashboard" class="text-white text-decoration-none">Home</a></li>
                        <li><a asp-controller="User" asp-action="ScrapRates" class="text-white text-decoration-none">Scrap Rates</a></li>
                    </ul>
                </div>

                <!-- Company  -->
                <div class="col-md-4 text-start px-4">

                    <img src="~/images/logo.png" alt="ScrapUncle" class="img-fluid mb-2" style="max-width: 150px;">
                    <p class="fw-bold">Swapeco Solutions Private Limited</p>
                    <p><strong>Regd. Address:</strong> C-171, Phase-I, Okhla Industrial Estate, Phase 1, New Delhi - 110020</p>
                    <p><strong>Corr Address:</strong> Incubation Center, IIIT Delhi, Okhla, Phase 3, New Delhi - 110020</p>
                </div>

            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
