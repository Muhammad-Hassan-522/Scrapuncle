@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - ScrapUncle Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SU.styles.css" asp-append-version="true" />
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
            <div class="container-fluid px-4">

                <a class="navbar-brand" asp-area="" asp-controller="Admin" asp-action="AdminDashboard">
                    <img src="~/images/logo.png" alt="ScrapUncle" width="120" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="adminNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-success fw-semibold" asp-controller="Admin" asp-action="AdminDashboard">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-success fw-semibold" asp-controller="Admin" asp-action="ViewUsers">Users</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-success fw-semibold" asp-controller="Admin" asp-action="ViewDealers">Dealers</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-success fw-semibold" asp-controller="Admin" asp-action="AdminPickups">Pickups</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-success fw-semibold" asp-controller="Admin" asp-action="ManageItems">Manage Scrap Items</a>
                        </li>
                        
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-success fw-semibold" href="#" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle me-1"></i> Admin
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item text-danger" asp-area="Identity" asp-page="/Account/Logout">
                                        <i class="bi bi-box-arrow-right me-2"></i> Logout
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-success text-white py-4 mt-5">
        <div class="container-fluid px-4">
            <div class="row">

                <!-- Admin Support -->
                <div class="col-md-4">
                    <h5 class="fw-bold">Admin Support</h5>
                    <p><i class="bi bi-telephone"></i> +91 9876543210</p>
                    <p><i class="bi bi-envelope"></i> admin@scrapuncle.com</p>
                    <p class="fw-bold">Support available <br /> from 10am - 7pm</p>

                    <h6>Connect With Us</h6>
                    <a href="https://www.instagram.com" class="text-white me-2"><i class="bi bi-instagram"></i></a>
                    <a href="https://www.twitter.com" class="text-white me-2"><i class="bi bi-twitter"></i></a>
                    <a href="https://www.linkedin.com" class="text-white me-2"><i class="bi bi-linkedin"></i></a>
                    <a href="https://www.facebook.com" class="text-white me-2"><i class="bi bi-facebook"></i></a>
                </div>

                <!-- Quick Links -->
                <div class="col-md-4">
                    <h5 class="fw-bold">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Admin" asp-action="AdminDashboard" class="text-white text-decoration-none">Home</a></li>
                        <li><a asp-controller="Admin" asp-action="ViewUsers" class="text-white text-decoration-none">Users</a></li>
                        <li><a asp-controller="Admin" asp-action="ViewDealers" class="text-white text-decoration-none">Dealers</a></li>
                        <li><a asp-controller="Admin" asp-action="AdminPickups" class="text-white text-decoration-none">Pickups</a></li>
                        <li><a asp-controller="Admin" asp-action="ManageItems" class="text-white text-decoration-none">Manage Scrap Items</a></li>
                    </ul>
                </div>

                <!-- Admin Info -->
                <div class="col-md-4">
                    <img src="~/images/logo.png" alt="ScrapUncle" class="img-fluid mb-2" style="max-width: 150px;" />
                    <p class="fw-bold">ScrapUncle Admin Panel</p>
                    <p><strong>Regd. Address:</strong> C-171, Phase-I, Okhla Industrial Estate, Phase 1, New Delhi - 110020</p>
                    <p><strong>Corr Address:</strong> Incubation Center, IIIT Delhi, Okhla, Phase 3, New Delhi - 110020</p>
                </div>

            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
